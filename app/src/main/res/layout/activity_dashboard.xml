<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/login_background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.AppCompatButton
        android:text="Add Student"
        android:id="@+id/addstudent"
        android:layout_margin="15dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@color/button_clr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:text="Add Faculty"
        android:id="@+id/addfaculty"
        android:layout_margin="15dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@color/button_clr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:text="Search Student"
        android:id="@+id/searchst"
        android:layout_margin="15dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@color/button_clr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:text="Search Faculty "
        android:id="@+id/searchflt"
        android:layout_margin="15dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@color/button_clr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.appcompat.widget.AppCompatButton
        android:text="View Website"
        android:id="@+id/view"
        android:layout_margin="15dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@color/button_clr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:text="Log Out"
        android:id="@+id/logout"
        android:layout_margin="15dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@color/button_clr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>